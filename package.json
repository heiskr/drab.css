{
  "name": "drab.css",
  "version": "1.9.2",
  "description": "An extremely boring set of CSS. If you have a page of basic, unstyled HTML, and want to do almost no work, just pop this in.",
  "main": "css/drab.css",
  "scripts": {
    "build-main": "cat node_modules/modern-normalize/modern-normalize.css css/drab.partial.css > css/drab.css",
    "build-util": "cat css/drab.css css/drabutil.partial.css > css/drabutil.css",
    "min-main": "postcss css/drab.css -o css/drab.min.css",
    "min-util": "postcss css/drabutil.css -o css/drabutil.min.css",
    "pretty": "prettier \"css/*.css\" index.html --write",
    "prepublish": "npm run build-main && npm run build-util && npm run min-main && npm run min-util && npm run pretty",
    "test": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heiskr/drab.css.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/heiskr/drab.css/issues"
  },
  "homepage": "https://github.com/heiskr/drab.css#readme",
  "devDependencies": {
    "@csstools/postcss-oklab-function": "^1.1.1",
    "cssnano": "^5.1.14",
    "husky": "^1.3.1",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "modern-normalize": "^1.1.0"
  }
}
