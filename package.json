{
  "name": "drab.css",
  "version": "1.5.4",
  "description": "An extremely boring set of CSS. If you have a page of basic, unstyled HTML, and want to do almost no work, just pop this in.",
  "main": "css/drab.css",
  "scripts": {
    "build-light": "cat node_modules/normalize.css/normalize.css css/drab.partial.css css/theme.light.css > css/drab.css",
    "build-dark": "cat node_modules/normalize.css/normalize.css css/drab.partial.css css/theme.dark.css > css/drab.dark.css",
    "min-light": "cleancss -o css/drab.min.css css/drab.css",
    "min-dark": "cleancss -o css/drab.dark.min.css css/drab.dark.css",
    "pretty": "prettier \"css/*.css\" --write",
    "prepublish": "npm run build-light && npm run build-dark && npm run min-light && npm run min-dark && npm run pretty",
    "test": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heiskr/drab.css.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/heiskr/drab.css/issues"
  },
  "homepage": "https://github.com/heiskr/drab.css#readme",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "clean-css": "^4.2.1",
    "clean-css-cli": "^4.2.1",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
